<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Web Testing AI Agent</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Dashboard
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="create-run">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Create Run
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="runs">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Active Runs
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="reports">
                <span class="bi bi-file-earmark-text-nav-menu" aria-hidden="true"></span> Reports
            </NavLink>
        </div>
        
        <!-- Bug Tracking Section -->
        <hr class="text-white-50" />
        <div class="nav-item px-3">
            <small class="text-white-50 fw-bold">BUG TRACKING</small>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="bugs">
                <span class="bi bi-bug-fill-nav-menu" aria-hidden="true"></span> Bug List
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="bugs/create">
                <span class="bi bi-plus-circle-fill-nav-menu" aria-hidden="true"></span> Report Bug
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="users">
                <span class="bi bi-people-fill-nav-menu" aria-hidden="true"></span> Users
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
